<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        card_view:cardMaxElevation="1dp"
        card_view:cardElevation="1dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            >



            <LinearLayout
                android:id="@+id/DateLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/DateView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_1sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:text="Date"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="@dimen/_15sdp"
                     />
                <TextView
                    android:id="@+id/Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_1sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textAppearance="@style/TextAppearance.AppCompat" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/TimeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DateLayout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TimeView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_1sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:text="Time"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="@dimen/_15sdp" />
                <TextView
                    android:id="@+id/Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_1sdp"
                    android:textAppearance="@style/TextAppearance.AppCompat" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/BloodTypeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TimeLayout"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/BloodTypeView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_1sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:text="Blood Type"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="@dimen/_15sdp" />
                <!--      <TextView
                              android:id="@+id/PhoneView"
                              android:layout_width="90dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="Phone"
                              android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                              android:padding="@dimen/_5sdp"

                              android:textColor="@color/apptext"
                              android:textSize="@dimen/_15sdp"/>
          -->
                <TextView
                    android:id="@+id/BloodType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_1sdp"
                    android:textAppearance="@style/TextAppearance.AppCompat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/BloodQuantityLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BloodTypeLayout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/BloodQunatitView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_1sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:text="Blood Quantity"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="@dimen/_15sdp" />

                <!--    <TextView
                            android:id="@+id/EmailView"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/_5sdp"
                            android:text="Email"

                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/apptext"
                            android:textSize="@dimen/_15sdp" />
        -->
                <TextView
                    android:id="@+id/BloodQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_1sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:textAppearance="@style/TextAppearance.AppCompat" />
            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
