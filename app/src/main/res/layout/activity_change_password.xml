<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marif.bloodapp.Page.EditProfile">

    <ImageView
        android:id="@+id/changepasswordbanner"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/banner_description"
        app:srcCompat="@android:color/holo_red_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:text="@string/change_password"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/_20sdp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp"
        android:layout_below="@id/changepasswordbanner">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Password"
            android:textSize="@dimen/_18sdp"
            android:layout_margin="@dimen/_5sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="@color/apptext"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/_260sdp"
            android:layout_height="wrap_content"
            app:passwordToggleContentDescription="view pass"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@android:color/darker_gray">

            <android.support.design.widget.TextInputEditText
                android:layout_width="@dimen/_260sdp"
                android:layout_height="wrap_content"
                android:id="@+id/oldpass"
                android:ems="10"
                android:inputType="textPassword"
                android:textColorLink="@android:color/darker_gray"
                android:textSize="@dimen/_18sdp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textSize="@dimen/_18sdp"
            android:layout_margin="@dimen/_5sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="@color/apptext"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/_260sdp"
            android:layout_height="wrap_content"
            app:passwordToggleContentDescription="view pass"
            app:passwordToggleEnabled="false"
            app:passwordToggleTint="@android:color/darker_gray">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newpass"
                android:ems="10"
                android:inputType="textPassword"
                android:textColorLink="@android:color/darker_gray"
                android:textSize="@dimen/_18sdp" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm New Password"
            android:textSize="@dimen/_18sdp"
            android:layout_margin="@dimen/_5sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:textColor="@color/apptext"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="@dimen/_260sdp"
            android:layout_height="wrap_content"
            app:passwordToggleContentDescription="view pass"
            app:passwordToggleEnabled="false"
            app:passwordToggleTint="@android:color/darker_gray">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cnewpass"
                android:ems="10"
                android:inputType="textPassword"
                android:textColorLink="@android:color/darker_gray"
                android:textSize="@dimen/_18sdp" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>


    <Button
        android:id="@+id/cp_done"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@android:color/holo_red_dark"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/_18sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>